<% provide(:title, "Employees") %>
<div class="container">
	<div class="employee-index-header">
		<h3>Employee Index</h3>
		<%= link_to("Create new employee", new_employee_path, class: "btn-employee-create") if current_user.isAdmin? %>
	</div>
	<div>
		<%= will_paginate @employees %>
		<ul>
		<% @employees.each do |employee| %>
			<li><%= link_to employee.name, employee_path(employee) %> 
				<% if current_user.isAdmin? %>
				| <%= link_to "edit", edit_employee_path(employee) %> 
				| <%= link_to("delete", employee_path(employee), method: :delete) unless current_user?(employee) %> 
				<% end %>
			</li>
		<% end %>
		</ul>
		<%= will_paginate @employees %>
	</div>
</div>