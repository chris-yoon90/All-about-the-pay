<% provide(:title, "Edit #{@employee.name}") %>
<div class="container">
	<div class="row">
		<%= render 'layouts/actions_side_nav' %>
		<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-0">
			<h3>Account of <%= @employee.name %></h3>
			<%= form_for(@employee) do |f|%>
				<%= render 'shared/error_messages_template', model: @employee %>
				<% if current_user.isAdmin? %>
					<%= render 'shared/employee_form_without_password', f: f %>
					<% if @employee == current_user %>
						<%= render 'shared/employee_form_password', f: f %>
					<% end %>
				<% else %>
					<%= render 'shared/employee_form_password', f: f %>
				<% end %>
				<%= f.submit "Update", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>